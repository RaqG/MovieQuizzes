<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraint_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_question"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="16dp"
                android:text="Question"
                android:textSize="20sp" />

            <RadioGroup
                android:id="@+id/radio_group_answers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:visibility="visible">

                <RadioButton
                    android:id="@+id/radio_answer_1"
                    style="@style/CustomAnswerText"
                    android:text="Resposta 1" />

                <RadioButton
                    android:id="@+id/radio_answer_2"
                    style="@style/CustomAnswerText"
                    android:text="Resposta 2" />

                <RadioButton
                    android:id="@+id/radio_answer_3"
                    style="@style/CustomAnswerText"
                    android:text="Resposta 3" />

                <RadioButton
                    android:id="@+id/radio_answer_4"
                    style="@style/CustomAnswerText"
                    android:text="Resposta 4" />

                <RadioButton
                    android:id="@+id/radio_answer_5"
                    style="@style/CustomAnswerText"
                    android:text="Resposta 5" />

            </RadioGroup>

            <CheckBox
                android:id="@+id/check_answer_1"
                style="@style/CustomAnswerText"
                android:text="Resposta 1"
                android:visibility="visible" />

            <CheckBox
                android:id="@+id/check_answer_2"
                style="@style/CustomAnswerText"
                android:layout_marginTop="8dp"
                android:text="Resposta 2"
                android:visibility="visible" />

            <CheckBox
                android:id="@+id/check_answer_3"
                style="@style/CustomAnswerText"
                android:layout_marginTop="8dp"
                android:text="Resposta 3"
                android:visibility="visible" />

            <CheckBox
                android:id="@+id/check_answer_4"
                style="@style/CustomAnswerText"
                android:layout_marginTop="8dp"
                android:text="Resposta 4"
                android:visibility="visible" />

            <CheckBox
                android:id="@+id/check_answer_5"
                style="@style/CustomAnswerText"
                android:layout_marginTop="8dp"
                android:text="Resposta 5"
                android:visibility="visible" />

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/answer_btn"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:text="@string/answer"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>